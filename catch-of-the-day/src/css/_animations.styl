/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  padding 0 !important
  max-height 0
  transform translateX(-120%)
  transition 0.25s
  &.order-enter-active
    padding 2rem 0 !important
    max-height 60px
    transform translateX(0)

.order-exit
  transition 0.25s
  transform translateX(0)
  &.order-exit-active
    padding 0
    transform translateX(120%)

.count-enter
  transition .25s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  position absolute
  left 0
  transform translateY(0)
  transition .25s
  &.count-exit-active
    transform translateY(-100%)
